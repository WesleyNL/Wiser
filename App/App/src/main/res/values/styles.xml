<resources>
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorWindowBackground</item>
        <item name="android:colorForeground">@color/colorForeground</item>
        <item name="android:navigationBarColor">@color/colorNavigatorBar</item>
        <item name="android:statusBarColor">@color/colorStatusBar</item>
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:textColorPrimaryInverse">@color/colorPrimaryInverseText</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>
        <item name="android:textColorSecondaryInverse">@color/colorSecondaryInverseText</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Tema do App -->

    <style name="AppTema" parent="android:Theme.Material.Light">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="android:colorBackground">@color/colorWindowBackground</item>
        <item name="android:colorForeground">@color/colorForeground</item>
        <item name="android:navigationBarColor">@color/colorNavigatorBar</item>
        <item name="android:statusBarColor">@color/colorStatusBar</item>
        <item name="android:textColorPrimaryInverse">@color/colorPrimaryInverseText</item>
        <item name="android:textColorSecondaryInverse">@color/colorSecondaryInverseText</item>
    </style>

    <style name="AppTema.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppCompatTema" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/colorForeground</item>
        <item name="android:statusBarColor">@color/colorStatusBar</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTema.AppTextTitulo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="AppTema.AppInfoTitulo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="AppTema.AppImgPerfil">
        <item name="android:src">@drawable/com_facebook_profile_picture_blank_portrait</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="AppTema.AppFrame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:background">@drawable/bordershadow</item>
    </style>

    <style name="AppTema.AppItemFrame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="AppTema.AppBotao">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:background">@drawable/btndefaultshape</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryInverseText</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTema.AppBotao.Login">
        <item name="android:background">@drawable/btnloginshape</item>
    </style>

    <style name="AppTema.AppBotao.Atencao">
        <item name="android:background">@drawable/btndefaultshape</item>
    </style>

    <style name="AppTema.AppBotao.Mensagem">
        <item name="android:background">@drawable/btndefaultshape</item>
    </style>

</resources>
